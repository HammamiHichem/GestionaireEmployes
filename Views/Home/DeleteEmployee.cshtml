@model GestionaireEmployes.Models.Employee

@{
    ViewData["Title"] = "Delete Employee";
}

<h1>Are you sure you want to delete this employee?</h1>

<form asp-action="DeleteConfirmed" asp-controller="Home" method="post">
    <input type="hidden" name="id" value="@Model.EmployeeId" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a href="@Url.Action("EmployeeListe", "Home")" class="btn btn-secondary">Cancel</a>
</form>